{
  "name": "tamagui-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "native": "cd apps/expo && expo start",
    "web": "cd apps/next && yarn next",
    "watch": "yarn workspaces foreach -pi run watch",
    "build": "yarn workspaces foreach --exclude next-app -pi run build",
    "upgrade:tamagui": "manypkg upgrade tamagui && manypkg upgrade @tamagui && manypkg upgrade tamagui-loader"
  },
  "resolutions": {
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-refresh": "0.11.0",
    "react-native-web": "0.17.5",
    "tamagui": "1.0.0-beta.6",
    "@tamagui/core": "1.0.0-beta.6",
    "@tamagui/build": "1.0.0-beta.6",
    "@tamagui/stacks": "1.0.0-beta.6",
    "@tamagui/fake-react-native": "1.0.0-beta.6",
    "typescript": "4.6.3",
    "@tamagui/animate-presence": "1.0.0-beta.6",
    "@tamagui/helpers": "1.0.0-beta.6",
    "@tamagui/polyfill-dev": "1.0.0-beta.6",
    "@tamagui/proxy-worm": "1.0.0-beta.6",
    "@tamagui/static": "1.0.0-beta.6",
    "@tamagui/use-controllable-state": "1.0.0-beta.6",
    "@tamagui/use-debounce": "1.0.0-beta.6",
    "@tamagui/use-force-update": "1.0.0-beta.6",
    "@tamagui/use-window-size": "1.0.0-beta.6",
    "@tamagui/animations-css": "1.0.0-beta.6",
    "@tamagui/animations-reanimated": "1.0.0-beta.6",
    "@tamagui/babel-plugin": "1.0.0-beta.6",
    "@tamagui/colors": "1.0.0-beta.6",
    "@tamagui/compose-refs": "1.0.0-beta.6",
    "@tamagui/core-node": "1.0.0-beta.6",
    "@tamagui/create-context": "1.0.0-beta.6",
    "@tamagui/drawer": "1.0.0-beta.6",
    "@tamagui/feather-icons": "1.0.0-beta.6",
    "@tamagui/font-inter": "1.0.0-beta.6",
    "tamagui-loader": "1.0.0-beta.6",
    "@tamagui/next-plugin": "1.0.0-beta.6",
    "@tamagui/popover": "1.0.0-beta.6",
    "@tamagui/theme-base": "1.0.0-beta.6"
  },
  "devDependencies": {
    "@manypkg/cli": "^0.19.1",
    "@types/react": "^17.0.39",
    "@types/react-native": "^0.67.2",
    "eslint": "^8.11.0",
    "prettier": "^2.6.2",
    "turbo": "^1.1.6",
    "typescript": "^4.6.3"
  },
  "packageManager": "yarn@3.2.0"
}
